<div class="auth">
	<div class="jumbotron auth-form">
		<% if flash.now[:errors] %>
			<ul class="errors alert alert-danger">
				<% flash.now[:errors].each do |notice| %>
					<li><%= notice %></li>
				<% end %>
			</ul>
		<% end %>
		
		<h1>Sign Up</h1>

		<form action="<%= users_url %>" method="POST">
			<input 
				type="hidden"
				name="authenticity_token"
				value="<%= form_authenticity_token %>">

			<div class="form-group">
			<label for="user_email">Enter Your Email Address</label>	
			<input 
				type="text"
				name="user[email]"
				value="<%= @user.email %>"
				id="user_email"
				class="form-control">
		</div>
		
		<div class="form-group">
			<label for="user_password">Choose A Password</label>	
			<input
				type="password"
				name="user[password]"
				id="user_password"
				class="form-control">
		</div>	
				
			<button type="submit" class="btn btn-primary">Sign up</button>
		</form>
	</br>
		Already a user? Click <%= link_to "here", new_session_url %> to sign-in.
	</div>
</div>