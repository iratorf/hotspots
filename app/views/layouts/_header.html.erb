<script>
	$(function(){
		$('.navbar-form > button').on("click", function (event){
			event.preventDefault();
			city = $('.navbar-form input').serialize();
			$('.navbar-form input').val("");
			Backbone.history.navigate(('/search?' + city), { trigger: true });
		})
	})
</script>