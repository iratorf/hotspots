<li class="bus-item pull-left">
	
		<a href="#" class="bus-item-img">
			<img src="<%= business.images().first().escape('url') %>">
		</a>
	
		<br>
			
	<div class="bus-info">
	
			<% if (business.escape('name').length > 20) { %>
				<a class="bus-name"><%= business.escape('name').substr(0, 20) %>...</a>
			<% } else { %>
				<a class="bus-name"><%= business.escape('name') %></a>
			<% } %>
	
		<a href="#" class="bus-name bus-address">
			<%= business.escape('street') %>
		</a>
	
		<br>
	
		<div class="bus-attr tag">
			<%= business.tags().first().escape('name')%>
			<div class="rating pull-left">
				<%= rating %>
			</div>
			<div class="price pull-right">
				<% for(var i = 0; i < business.escape('price_range'); i++) { %>
					<span class="glyphicon glyphicon-usd"></span>
				<%}%>
			</div>
		</div>
	</div>
</li>
